  #include<iostream>

using namespace  std;

class Array {

public:
	Array(int size = 10) :mCap(size), mCur(0)
	{
		mpArr = new int[mCap]();
	}
	~Array() {
		delete []mpArr;
		mpArr = nullptr;
	
	};
public:
	//末尾增加元素
	void push_back(int val) {
		if (mCap == mCur) {
			expand(2 * mCap);
		}
		mpArr[mCur++] = val;
	};

	//末尾删除元素
	void pop_back(int val) {
		if (mCur == 0) return ;
		mCur--;
	};

	//按照位置增加元素
	void insert(int pos, int val) {
		if (pos<0 || pos>mCap)  return;
		if (pos == mCap) expand(2 * mCap);
		for (int i=mCur-1;i >= pos; i--)
		{
			mpArr[i+1] = mpArr[i];
		}
		mpArr[pos] = val;
		mCur++;
	
	};

	//按元素值删除元素
	void erase(int pos) {
		if (pos < 0 || pos >= mCur) return;
		for (int i = pos; i < mCur; i++) {
			mpArr[i] = mpArr[i + 1];
		}
		mCur--;

	
	};

	//按元素值查询元素
	int find(int val) {
		for (int i = 0; i < mCur; i++)
		{
			if (mpArr[i] == val) {
				return i;
			}
			
		}
		return -1;
	};

	//显示数组
	void show() {
		for (int i = 0; i < mCur; i++)
		{
			cout << mpArr[i];
		
		}
		cout << endl;
	
	}

private:
	int* mpArr;//指向可以扩容的数组内存
	int mCap;  //数组的容量
	int mCur;  //数组有效元素的个数
private:
	void expand(int size) {
		int *p = new int[size];
		memcpy(p, mpArr, sizeof(int)*mCap);
		delete[] mpArr;
		mpArr = p;
		mCap = size;

		}


};

int  main() {
	Array arr;

	for (int i = 0; i < 10; i++) {
		arr.push_back(i);
	}

	arr.show();
	arr.erase(8);
	arr.show();

	for (int i = 0; i < 10; i++) {
		arr.push_back(i);
	}
	arr.show();

	arr.insert(16, 798);
	arr.show();

	int pos=arr.find(798);
	cout << pos << endl;
	system("pause");
}
